<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>FrontEndServlet</servlet-name>
    <servlet-class>servlet.FrontEndServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>servlet.LoginServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>SearchServlet</servlet-name>
  	<servlet-class>servlet.SearchServlet</servlet-class>
  </servlet>

  <!-- Servlet mappings -->
  <servlet-mapping>
    <servlet-name>FrontEndServlet</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>SearchServlet</servlet-name>
  	<url-pattern>/search</url-pattern>
  </servlet-mapping>
  
  <!-- AJAX servlets. -->
  <servlet>
    <servlet-name>LoginAjaxServlet</servlet-name>
    <servlet-class>servlet.ajax.LoginAjaxServlet</servlet-class>
  </servlet>
  
  <!--  AJAX servlet mappings. -->
  <servlet-mapping>
    <servlet-name>LoginAjaxServlet</servlet-name>
    <url-pattern>/ajax/LoginGuess</url-pattern>
  </servlet-mapping>
  
  <!--  Welcome Files -->
  <welcome-file-list>
  		<welcome-file>_view/home.html</welcome-file>
  </welcome-file-list>
</web-app>
